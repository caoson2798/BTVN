<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:background="@drawable/bgln"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BT_Drawable.BTDrawActivity">
    <LinearLayout

        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_ln_top"
        android:layout_width="250dp"
        android:layout_height="60dp">
        <TextView
            android:layout_gravity="center"
            android:textColor="#10433b"
            android:textSize="20sp"
            android:text="CUSTORMER LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:background="@drawable/bg_ln_bottom"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_email"
            android:textSize="18sp"
            android:textColorHint="#fff"
            android:hint="Email ID"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="15dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/edit_pass"
            android:drawablePadding="20dp"
            android:inputType="textPassword"
            android:textSize="12sp"
            android:textColorHint="#fff"
            android:hint="PassWord"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/chk"
                android:textStyle="italic"
                android:textSize="8sp"
                android:text="Remember me"
                android:textColor="#b7bbce"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="italic"
                android:textColor="#b7bbce"
                android:gravity="center"
                android:textSize="8sp"
                android:text="Forgot Password?"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_save"
            android:textColor="#fffaff"
            android:background="@drawable/bg_btn_bt"
            android:layout_marginTop="10dp"
            android:text="Login"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>