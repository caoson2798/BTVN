<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:hint="Nhập tên"
        android:id="@+id/edt_name"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <EditText
        android:inputType="number"
        android:hint="Nhập tuổi"
        android:layout_below="@+id/edt_name"
        android:id="@+id/edit_NXB2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <EditText
        android:hint="Nhập địa chỉ"
        android:layout_below="@+id/edit_NXB2"
        android:id="@+id/edit_SoBanPhatHanh2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/btnSave1"
        android:text="Lưu"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_SoBanPhatHanh2"
        android:layout_width="100dp"
        android:layout_height="60dp" />
    <TextView
        android:textSize="20sp"
        android:layout_below="@+id/btnSave1"
        android:id="@+id/txtShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>