<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:orientation="vertical"
        tools:context=".json.detail.DetailActivity">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_img"
                android:layout_width="match_parent"
                android:layout_height="400dp">

            </android.support.v4.view.ViewPager>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="quần đội fadfbdhbffhbfahhbdhsbf"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_price_detail_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200.0000Đ"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#ccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Chi tiết sản phảm:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:stretchColumns="*">

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="Danh Mục"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_name_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên Sản phẩm"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="giá tiền:"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/txt_price_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="20000VND"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:text="Cân nặng tối đa:"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/txt_weight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="200kg"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Các kích thước:"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/txt_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="L M"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#ccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="*Các chi nhánh:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_ChiNhanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ffdfsfdfdsfdsfds"
                android:textColor="#000"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_margin="7dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn"
        android:layout_alignParentBottom="true"
        android:text="Mua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>