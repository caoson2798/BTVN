<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LTNetWork.DetailSPActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_proc"
            android:src="@mipmap/cukcuk"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <TextView
            android:id="@+id/txt_name1"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#fc0856"
            android:textSize="20sp"
            android:text="tên sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_price_proc"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#fc0856"
            android:textSize="20sp"
            android:text="30000Vnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ff06"
                android:layout_weight="1"
                android:id="@+id/txt_id_pro"
                android:textSize="20sp"
                android:text="Mã sản phẩm:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#ff06"
                android:layout_weight="1"
                android:id="@+id/txt_tonKho"
                android:textSize="20sp"
                android:text="Mã sản phẩm:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:text="Mô tả sản phẩm:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
           android:id="@+id/txt_decrep"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:text="dgdgđgdgdgfgjgjhkjhhjkhjbbbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>